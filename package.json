{
    "name": "dadbot",
    "version": "1.0.0",
    "description": "Telegram bot",
    "main": "lib/index.js",
    "scripts": {
        "lint": "tslint --project tsconfig.json",
        "build": "tsc",
        "deploy": "NODE_ENV=production pm2 start lib/index.js --name='dadbot' --log-date-format 'DD-MM HH:mm:ss.SSS'",
        "start": "NODE_ENV=production node lib/index.js",
        "dev": "ts-node src/index.ts"
    },
    "keywords": [
        "telegram"
    ],
    "author": "Peter Abbondanzo",
    "license": "MIT",
    "dependencies": {
        "dotenv": "^9.0.2",
        "node-telegram-bot-api": "^0.53.0",
        "typescript": "^4.2.4",
        "yargs": "^17.0.1"
    },
    "devDependencies": {
        "@types/node-telegram-bot-api": "^0.50.2",
        "@types/yargs": "^16.0.1",
        "ts-node": "^9.1.1"
    }
}
