{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
